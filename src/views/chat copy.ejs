<!DOCTYPE html>
<html>
  <head>
    <title>Chatter</title>
    <link rel="stylesheet" href="./css/chat.css">
  </head>
  <body>
    <div class="main">
      <div class="usersList">
        <form id="nicknameForm">
          <input id="nicknameInput" autocomplete="off" placeholder="Insira seu nickname"/>
          <button>Save</button>
        </form>
        <h2>Usu√°rios Logados:</h2>
        <ul class="users">
          <li>Roger</li>
          <li>David</li>
          <li>Richard</li>
        </ul>
      </div>
      <ul id="messages">
        <% messages.forEach(({ chatMessage, nickname, timestamp }) => { %>
          <li><%= `${timestamp} - ${nickname}: ${chatMessage}` %></li>
        <% } ) %>
      </ul>
    </div>
    <form id="messageForm">
      <input id="messageInput" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src='./js/script.js'></script>
  </body>
</html>