<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="./styles/chat.css">
  <title>Web Chat</title>
</head>
<body>
  <main>
    <div id='chat-container' class='chat-container'>
      <div id='left-container' class='left-container'>
        <p id='nickname' data-testid="online-user"></p>
        <form id='user-nick-form' class='user-nick-form'>
          <input id="nickname-input" data-testid="nickname-box" autocomplete="false"/><button data-testid="nickname-button" id='change-nick'>Salvar</button>
        </form>
        <div id='online-users' class='online-users'>
          <ul id='online-users-list'>
          </ul>
        </div>
      </div>
      <div id="right-container" class="right-container">
        <ul id='msgs'>
          <% messages.forEach(({nickname, message, timestamp}) => { %>
            <li data-testid="message"><%= `${timestamp} - ${nickname}: ${message}` %></li>
          <%})%>
        </ul>
      </div>  
    </div>
    <form id="message-form" class="message-form" action="">
      <input id="message-input" data-testid="message-box" autocomplete="false"/><button data-testid="send-button">Send</button>
    </form>
  </main>
</body>
<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
  // SOURCE: https://gist.github.com/6174/6062387
  let nickname = Math.random().toString(36).substring(2, 10) + Math.random().toString(36).substring(2, 10);
  
  const form = document.getElementById('message-form');
  const input = document.getElementById('message-input');
  
  const nicknameContainer = document.getElementById('nickname');
  nicknameContainer.innerText = nickname;
  socket.emit('newUser', nickname)

  const nicknameInput = document.getElementById('nickname-input');
  const btnNickInput = document.getElementById('change-nick');

  const onlineUsersList = document.getElementById('online-users-list');
  
  btnNickInput.addEventListener('click', (event) => {
    event.preventDefault();
    if (nicknameInput.value){
      nickname = nicknameInput.value;
      nicknameContainer.innerText = nickname;
      socket.emit('editUser', nickname);
    }
  })
  
  form.addEventListener('submit', (event) => {
    event.preventDefault();
    if (input.value) {
      const data = { nickname, chatMessage: input.value }
      socket.emit('message', data);
      input.value = '';
    }
  });

  socket.on('message', (msg) => {
    const msgs = document.getElementById('msgs');
    const li = document.createElement('li');
    li.setAttribute('data-testid', 'message');
    li.innerText = msg;
    msgs.appendChild(li);
  });

  socket.on('online', (onlineUsers) => {
    // SOURCE https://www.geeksforgeeks.org/remove-all-the-child-elements-of-a-dom-node-in-javascript/
    let firstChild = onlineUsersList.firstElementChild;
    while(firstChild){
      firstChild.remove();
      firstChild = onlineUsersList.firstElementChild;
    }
    
    const userIndex = onlineUsers.findIndex((user) => user.nickname === nickname);
    onlineUsers.splice(userIndex, 1);

    onlineUsers.forEach((user) => {
      const li = document.createElement('li');
      li.setAttribute('data-testid', 'online-user');
      li.innerText = user.nickname;
      onlineUsersList.appendChild(li);
    })
  })

</script>
</html>