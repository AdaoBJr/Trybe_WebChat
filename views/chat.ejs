<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO - trybe</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/chat.css">
  </head>
  <body class="box-chat">
    <div class="container nickname">

      <div>
        <ul id="list-nickname" class="ul-list"></ul>
      </div>

      <form>
        <input id="input-nickname" class="input" type="text" data-testid="nickname-box" placeholder="Nickname" autocomplete="off">
        <button id="btn-nickname" class="btn-send" data-testid="nickname-button">Enviar</button>
      </form>
    </div>
    <div class="container message">
      <div>
        <ul id="list-message" class="ul-list"></ul>
      </div>
      <form>
        <input id="input-message" class="input" type="text" data-testid="message-box" placeholder="Mensagem" autocomplete="off">
        <button id="btn-message" class="btn-send" data-testid="send-button">Enviar</button>
      </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src='./js/chat.js'></script>
  </body>
</html>