<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web Chat</title>

  <script src="/socket.io/socket.io.js"></script>

</head>
<body>
  <form class="form-user">
    <input type="text" id="name" placeholder="Enter your name" data-testid="nickname-box">
    <button type="button" id="savenick" data-testid="nickname-button">Save</button>
    <input type="text" id="message" placeholder="Enter your message" data-testid="message-box">
    <button type="button" id="send" data-testid="send-button">Send</button>
  </form>
  <div class="users">

  </div>
  <div class="messages">

  </div>
  <script>
    const socket = io();
    let nickname = '';

    const createMessage = (message) => {
      const messageDiv = document.querySelector('.messages');
      const p = document.createElement('p');
      p.innerText = message;
      p.setAttribute("data-testid", "message");
      p.className = 'one-listed-message';
      messageDiv.appendChild(p);
    };

    const createUser = (users, id) => {
      const userDiv = document.querySelector('.users');
      const actualUser = users.find(user => user.id === id);

      if (actualUser) {
        userDiv.innerHTML = '';
        const actualUserP = document.createElement('p');
        actualUserP.innerText = actualUser.nickname;
        actualUserP.setAttribute("data-testid", "online-user");
        actualUserP.id = 'actualUser';
        userDiv.appendChild(actualUserP);
      }

      users.forEach((user) => {
        if (user.id !== id) {
          const userP = document.createElement('p');
          userP.setAttribute("data-testid", "online-user");
          userP.innerText = user.nickname;
          userDiv.appendChild(userP);
        };
      });
    };
  
    const clearUsers = () => {
      const userDiv = document.querySelector('.users');
      userDiv.innerHTML = '';
    };

    const inputMessage = document.querySelector('#message');
    document.querySelector('#send').addEventListener('click', (e) => {
      e.preventDefault();
      socket.emit('message', { chatMessage: inputMessage.value, nickname: nickname });
    });

    document.querySelector('#savenick').addEventListener('click', (e) => {
      e.preventDefault();
      newNickname = document.querySelector('#name').value;
      socket.emit('modifyName', { nickname: newNickname });
      nickname = newNickname;
    });

    socket.on('listAllMessages', (messages) => {
      console.log(messages);
      return messages.map((message) => createMessage(message));
    })

    socket.on('message', (message) => createMessage(JSON.parse(message)));

    socket.on('saveNickname', (name) => { nickname = name });

    socket.on('listAllUsers', (users) => {
      createUser(users, socket.id);
    });

    socket.on('connected', ({ actualUser, users }) => {
      nickname = actualUser;
      createUser(users, socket.id);
    });

  </script>
</body>
</html>