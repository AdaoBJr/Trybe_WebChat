<!DOCTYPE html>
<html>

<head>
  <title>Project WebChat</title>
</head>

<body>
  <div>
    <span id="user"></span>
  </div>
  <div>
      <input id="nameInput" data-testid="nickname-box" />
      <button  id="saveName" data-testid="nickname-button">Save</button>
  </div> 

  <div>
    <ul id="listUsers"></ul>
  </div>

  <ul id="messages"></ul>
  <form>
    <input id="messageInput" data-testid="message-box" />
    <button data-testid="send-button">Send</button>
  </form>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    let nickname = '';
    const socket = window.io();

    const nameUser = document.querySelector('#user');

    //fonte: https://socket.io/docs/v4/
    socket.on('connect', () => {
      nickname = socket.id.slice(0, 16)
      nameUser.innerText = nickname;
      socket.emit('userConn', nickname)
    })

    const usersConnect = document.querySelector('#listUsers')

    socket.on('userConn', (usersList) => {
      usersConnect.innerHTML = '';
      usersList.forEach((user, index) => {        
        if (user.name === nickname) {
          const li = document.createElement('li')
          li.innerText = user.name;
          li.setAttribute('data-testid', 'online-user');
          usersConnect.appendChild(li);

          usersList.splice(index, 1);
        }
      })
      usersList.forEach((user) => {
        const li = document.createElement('li')
        li.innerText = user.name;
        li.setAttribute('data-testid', 'online-user');
        usersConnect.appendChild(li)
      })
    })
    
    // socket.on('conn', (socketId) => {      
    //   nickname = socketId.slice(0, 16);
    //   nameUser.innerText = nickname;
    // });

    const form = document.querySelector('form');
    const inputMessage = document.querySelector('#messageInput');
    const btnSaveName = document.querySelector('#saveName')

    btnSaveName.addEventListener('click', (e) => {
      const inputName = document.querySelector('#nameInput');
      nickname = inputName.value;
      nameUser.innerText = nickname;
      socket.emit('userConn', nickname)
    })

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const chatMessage = inputMessage.value;
      socket.emit('message', { chatMessage, nickname });
      inputMessage.value = '';
      return false;
    });

    const createMessage = (message) => {
      const messagesUl = document.querySelector('#messages');
      const li = document.createElement('li');
      li.innerText = message;
      li.setAttribute('data-testid', 'message');
      messagesUl.appendChild(li);
    };

    socket.on('message', (message) => createMessage(message));
  </script>
</body>

</html>
