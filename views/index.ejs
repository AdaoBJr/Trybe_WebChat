<!DOCTYPE html>
<html>
  <head>
    <title>Document</title>
    
  </head>
  <body>
    <h2 data-testid="online-user" id='nicknameScreen'></h2>
    <form id='userForm'>
      Nickname: <input type="text" id="userNickname" data-testid="nickname-box" />
      <button data-testid="nickname-button">salvar nickname</button>
    </form>
    <form id="form" action="">
      Mensagem: <input id="input" autocomplete="off" data-testid="message-box"/>
      <button data-testid="send-button">Send</button>
    </form>

    <ul id="messages"></ul>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      let socket = io();

      let messages = document.getElementById('messages');
      let form = document.getElementById('form');
      let userForm= document.getElementById('userForm') 
      let userNickname = document.getElementById('userNickname');
      let nicknameOnScreen = document.getElementById('nicknameScreen')
      let input = document.getElementById('input');
     
      const createUser =  (newUserNick) =>{
        nicknameOnScreen.innerText = newUserNick;
      }

      userForm.addEventListener('click', (e) => {
      e.preventDefault();
      nicknameOnScreen.innerText = userNickname.value;
      userNickname.value= '';
      }
      )
     
      form.addEventListener('submit', (e) => {
      e.preventDefault();
      
        socket.emit('message', { chatMessage: input.value, nickname: nicknameOnScreen.innerText})
        input.value = '';
      })

      socket.on('userNickname', (userNickname) => {
        createUser(userNickname)
      })


      socket.on('message', (msg) => {
        let item = document.createElement('li');
        item.setAttribute('data-testid', "message")
        item.textContent = msg;
        messages.appendChild(item);
        window.scrollTo(0, document.body.scrollHeight);
      })
    </script>
  </body>
</html>