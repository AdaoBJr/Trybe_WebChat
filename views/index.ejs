<!DOCTYPE html>
<html>
  <head>
    <title>Document</title>

  </head>
  <body>
    <h2 id='nicknameScreen'></h2>
    <form id='userForm'>
      Nickname: <input type="text" id="userNickname" data-testid="nickname-box" />
      <button data-testid="nickname-button">salvar nickname</button>
    </form>
    <form id="form" action="">
      Mensagem: <input id="input" autocomplete="off" data-testid="message-box"/>
      <button data-testid="send-button">Send</button>
    </form>
    <ul id="userOnlineList">Users On-line:</ul>
    <ul id="messages">chat:
      <% messages.forEach(message => { %>
        <li data-testid= "message"> <%=message.msg %> </li>
      <% }) %>
    </ul>
    <script src="/socket.io/socket.io.js"></script>
    <script>
    
      let socket = io();
      let messages = document.getElementById('messages');
      let form = document.getElementById('form');
      let userForm = document.getElementById('userForm');
      let userOnlineList = document.getElementById('userOnlineList')  
      let userNickname = document.getElementById('userNickname');
      let nicknameOnScreen = document.getElementById('nicknameScreen')
      let input = document.getElementById('input');
     
      let thisUser = '';
      const createUser =  (newUserNick) =>{
        thisUser = newUserNick
        nicknameOnScreen.innerText = newUserNick;
      }

   
      
      userForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const newUserNick = userNickname.value
      sessionStorage.setItem('nickname', newUserNick);
      nicknameOnScreen.innerText = newUserNick;
      socket.emit('newUserNick', newUserNick);
      thisUser = newUserNick;
      userNickname.value= '';
      }
      )

      const insertUser = (nickname) => {
        let item = document.createElement('li');
        item.setAttribute('data-testid', "online-user")
        item.innerHTML = nickname;
        userOnlineList.appendChild(item);
      };


      form.addEventListener('submit', (e) => {
      e.preventDefault();
      
        socket.emit('message', { chatMessage: input.value, nickname: nicknameOnScreen.innerText})
        input.value = '';
      });
      
      socket.on('userNickname', (userNickname) => {
        createUser(userNickname);
      });

      const userAllList = (list) => {
        userOnlineList.innerHTML='';

        insertUser(thisUser);

        list.forEach((user) => {
          if(user!==thisUser){
            insertUser(user)
          }
        });
      }

      socket.on('usersList',(list) => userAllList(list));

      socket.on('message', (msg) => {
        let item = document.createElement('li');
        item.setAttribute('data-testid', "message")
        item.textContent = msg;
        messages.appendChild(item);
        window.scrollTo(0, document.body.scrollHeight);
      })
    
    </script>
  </body>
</html>