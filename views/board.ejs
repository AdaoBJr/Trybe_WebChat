<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebChat Project</title>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <main>
    <section>
      <form>
        <input type="text" name="nickname-box" id="nickname-box" value=<%=username%> data-testid="nickname-box">

        <button type="submit" id="nickname-button" data-testid="nickname-button">Salvar</button>

        <ul id="online-user" data-testid="online-user"></ul>

        <ul id="message">
          <%chatHistory.forEach((message) => {%>
            <li data-testid="message"><%=message%></li>
          <%})%>
        </ul>

        <input type="text" name="message-box" id="message-box" data-testid="message-box">

        <button type="submit" data-testid="send-button">Enviar</button>
      </form>
    </section>
  </main>
  <script type="text/javascript" src="/script.js"></script>
</body>
</html>